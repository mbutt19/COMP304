<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:andoir="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    andoir:layout_width="match_parent"
    andoir:layout_height="match_parent"
    andoir:orientation="vertical">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityChineseMap" />

    <Button
        andoir:id="@+id/switchMap"
        andoir:text="@string/mapSwitch"
        andoir:layout_width="wrap_content"
        andoir:layout_height="wrap_content"
        andoir:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/buttons"/>

</androidx.constraintlayout.widget.ConstraintLayout>