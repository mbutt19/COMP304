<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_main"
        style="@style/labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="102dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="125dp"
        android:layout_marginRight="125dp"
        android:text="@string/main_title"
        android:textSize="28sp" />

    <ListView
        android:id="@+id/list_restaurants"
        style="@style/Widget.AppCompat.ListView.Menu"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_below="@+id/title_main"
        android:layout_alignStart="@+id/title_main"
        android:layout_alignLeft="@+id/title_main"
        android:layout_alignEnd="@+id/title_main"
        android:layout_alignRight="@+id/title_main"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-59dp"
        android:layout_marginLeft="-59dp"
        android:layout_marginEnd="-59dp"
        android:layout_marginRight="-59dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="73dp" />

</RelativeLayout>